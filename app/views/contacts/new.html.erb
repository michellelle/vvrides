<div class="row" id="class">
    <div class="container text-center">
        <h2 class="text-center">Questions or comments?</h2>
        <p class="paw"><b>Re-home is a non-profit,</b></p>
        <p class="paw"><b>servitude to your prosperity. </b></p>
        <i class="fa fa-paw" id="logo"></i><br>
    </div>
    <div class="col-md-4 col-md-offset-4">
       <div class="well">
            <%= form_for @contact do |f| %>
               <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control' %>
                </div>
                
                <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control' %>
                </div>
                
                <div class="form-group">
                <%= f.label :comments %>
                <%= f.text_area :comments, class: 'form-control' %>
                </div>
                <%= f.submit 'Submit', class: 'btn btn-default-outline waves-effect' %>
            <% end %>    
        </div>    
    </div>    
</div>